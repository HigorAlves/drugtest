{
  "name": "enterprise",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "view:report": "turbo run view-report",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "commit": "cz",
    "release": "npx semantic-release --no-ci --dry-run",
    "clean": "scripts/clean-monorepo.sh",
    "solidarity": "solidarity check",
    "doctor": "scripts/environment-audit.sh",
    "database": "scripts/typeorm.sh",
    "system:up": "scripts/docker.sh",
    "system:down": "scripts/docker-down.sh"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "config/*",
    "infra/*",
    "kernel/*",
    "libs/*",
    "packages/*"
  ],
  "author": {
    "email": "me@higoralves.dev",
    "name": "Higor Alves",
    "url": "https://higoralves.dev"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix",
    "*": "prettier --ignore-unknown --write"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/prompt-cli": "^19.8.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "all-contributors-cli": "^6.26.1",
    "commitizen": "^4.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "semantic-release": "^24.2.3",
    "solidarity": "^3.0.4",
    "turbo": "^2.5.0",
    "ts-node": "^10.9.2"
  }
}
