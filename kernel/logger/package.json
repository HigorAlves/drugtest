{
	"name": "@enterprise/logger",
	"version": "1.0.0",
	"description": "",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"license": "ISC",
	"type": "module",
	"scripts": {
		"lint": "eslint src --max-warnings 0",
		"lint:fix": "eslint --fix src --max-warnings 0",
		"start": "yarn run build && node ./dist/src/index.js",
		"dev": "tsx --env-file=.env.development src/index.ts",
		"dev:watch": "tsx watch --env-file=.env.development src/index.ts",
		"build": "pkgroll --minify --clean-dist --sourcemap",
		"check-types": "tsc --noEmit",
		"test:unit": "vitest run .test.ts",
		"test:e2e": "vitest run .spec.ts"
	},
	"keywords": [],
	"author": {
		"email": "me@higoralves.dev",
		"name": "Higor Alves",
		"url": "https://higoralves.dev"
	},
	"exports": {
		"require": {
			"types": "./dist/index.d.cts",
			"default": "./dist/index.cjs"
		},
		"import": {
			"types": "./dist/index.d.mts",
			"default": "./dist/index.mjs"
		}
	},
	"prettier": "@enterprise/prettier",
	"eslintConfig": {
		"extends": [
			"@enterprise/eslint-config/library.js"
		]
	},
	"dependencies": {
		"winston": "^3.17.0",
		"winston-daily-rotate-file": "^5.0.0",
		"winston-loki": "^6.1.3"
	},
	"devDependencies": {
		"@enterprise/vitest-config": "*",
		"@enterprise/eslint-config": "*",
		"@enterprise/prettier": "*",
		"@enterprise/typescript-config": "*",
		"@types/node": "^22.14.1",
		"eslint": "^9.25.0",
		"pkgroll": "^2.12.1",
		"tsx": "^4.19.3",
		"typescript": "^5.8.3"
	}
}
